/* Function that waits for a button press */
void get_button_press(Button_TypeDef button)
{
  while (BSP_PB_GetState(button) != GPIO_PIN_RESET);
  HAL_Delay(50);
  while (BSP_PB_GetState(button) != GPIO_PIN_SET);
}
