/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

/* Configure the peripherals common clocks */
  PeriphCommonClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_I2C1_Init();
  MX_USART1_UART_Init();
  /* USER CODE BEGIN 2 */
  DWT_Init();
  uint8_t message_buf[100] = "Entering main..\n----System Config Reporting----\n";
  strcpy((char*) message_buf, "Press button to continue\n");
  transmit_UART_message(message_buf);
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
	  // Delay just for functionality //
	  HAL_Delay(2500);

	  // Reset Counter //
	  DWT->CYCCNT = 0;
	  get_frame();
	  uint32_t end = DWT->CYCCNT;

	  printf("#Frame grabbed - Time required:%ld -> Press button to transfer frame\n",end);
//	  get_button_press(BUTTON_SW1);
	  transmit_UART_frame(1);
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

